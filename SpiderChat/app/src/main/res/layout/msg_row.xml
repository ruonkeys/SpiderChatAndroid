<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/avatar"
        android:id="@+id/msg_sender_img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/msg_cntnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/msg_sender_img"
        android:text="message"
        android:background="@drawable/msg_send_back"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:textColor="#000"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:textSize="17sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:layout_alignBaseline="@+id/msg_cntnt"
        android:layout_alignBottom="@+id/msg_cntnt"
        android:layout_alignParentEnd="true"
        android:background="@drawable/msg_back"
        android:textColor="#fff"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/msg_cntnt_sent"
        android:textSize="17sp"/>

</RelativeLayout>